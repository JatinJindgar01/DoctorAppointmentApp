<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditDoctorProfile"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/editProfileImageView"
        android:layout_width="131dp"
        android:layout_height="143dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_person_black_24dp"
        tools:ignore="VectorDrawableCompat" />


    <EditText
        android:id="@+id/editProfileFullName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/editProfileEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:hint="Your Email Address"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp" />

    <EditText
        android:id="@+id/editProfilePhoneNo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:hint="Phone"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        />

    <EditText
        android:id="@+id/editProfileMorningTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:hint="Morning Time"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"/>
    <EditText
        android:id="@+id/editProfileEveningTime"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:hint="Evening Time"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"/>
    <EditText
        android:id="@+id/editProfileFee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:hint="Fee"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"/>
    <EditText
        android:id="@+id/editProfileExperiance"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="phone"
        android:layout_marginTop="16dp"
        android:hint="Experiance"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"/>
    <EditText
        android:id="@+id/editProfileAddress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:hint="Address"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"/>

    <EditText
        android:id="@+id/editProfilePincode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:layout_marginTop="16dp"
        android:inputType="phone"
        android:hint="Pincode"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp" />


    <Button
        android:id="@+id/saveProfileInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>